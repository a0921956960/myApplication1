<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xxss"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="64dp"
        android:background="#FFEB3B"
        android:text="Hello World!"
        android:textColor="#1D1E1E"
        android:textSize="48sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/textView2_text2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="67dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="35dp"
        android:background="#FFEB3B"
        android:text="喔YA"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/textView4_text4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_text1" />

    <TextView
        android:id="@+id/textView3_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="67dp"
        android:background="#FFEB3B"
        android:text="喔YES"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4_text4"
        app:layout_constraintTop_toBottomOf="@+id/textView_text1" />

    <TextView
        android:id="@+id/textView4_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="19dp"
        android:background="#FFEB3B"
        android:text="喔ON"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/textView3_text3"
        app:layout_constraintStart_toEndOf="@+id/textView2_text2"
        app:layout_constraintTop_toBottomOf="@+id/textView_text1" />

    <Button
        android:id="@+id/button1_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="-20dp"
        android:text="按我快按我"
        app:layout_constraintEnd_toStartOf="@+id/button2_text2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2_text2" />

    <Button
        android:id="@+id/button2_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="不要按我"
        app:layout_constraintEnd_toStartOf="@+id/button3_text3"
        app:layout_constraintStart_toEndOf="@+id/button1_text1"
        app:layout_constraintTop_toBottomOf="@+id/textView4_text4" />

    <Button
        android:id="@+id/button3_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="30dp"
        android:text="確定要按我嗎"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button2_text2"
        app:layout_constraintTop_toBottomOf="@+id/textView3_text3" />

</androidx.constraintlayout.widget.ConstraintLayout>